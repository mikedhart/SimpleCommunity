<div class="well">
  <div class="btn-group">
    <%= link_to "New Post", new_post_path, :class => "btn btn-success" %>
    <%= link_to "New Video", new_post_path, :class => "btn btn-success" %>
  </div><!-- btn-group -->
</div><!-- well -->

<%= content_tag(:strong, "There are currently no posts on display.") unless @posts.size > 0 %>

<% @posts.each do |post| %>
  <%= render post, :locals => { :post => post } %>
<% end %>